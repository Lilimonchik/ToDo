@model ToDo.Models.TaskModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4">Delete Task</h1>

            <h3 class="text-center">Are you sure you want to delete this?</h3>

            <div>
                <h4>Task Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">Task Title</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                    <dt class="col-sm-3">Is Done</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.IsDone)</dd>
                </dl>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="text-center mt-3">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>